{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <h1>Drivers</h1>
    <div class="row">
        <div class="small-12 columns">
            <a href="{{ url('driver') }}" class="tiny button">Add Driver</a>
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns">
            <table class="drivers">
                <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Login</th>
                    <th>Status</th>
                    <th width="145px">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for driver in drivers %}
                    <tr>
                        <td>{{ driver.name }}</td>
                        <td>{{ driver.login }}</td>
                        {% if driver.isOnline %}
                            <td><span class="online">Online</span></td>
                        {% else %}
                            <td><span class="offline">Offline</span></td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/styles/drivers.css') }}">
{% endblock %}