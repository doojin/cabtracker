{% set userInfo = app.session.get('userInfo') %}
<div class="header">
    <div class="row">
        <div class="small-12 columns">
            <div class="company-name">
                {% if userInfo is not empty %}
                    {{ userInfo.companyName }}
                {% endif %}
            </div>
            <div class="authorization-status">
                {% if userInfo is empty %}
                    <i class="fi-alert"></i> You are not logged into system
                {% else %}
                    You are logged in as <b>{{ userInfo.name }}</b>
                {% endif %}
            </div>
        </div>
    </div>
</div>