{% extends 'AppBundle::layout.html.twig' %}

{% form_theme authorizationForm 'AppBundle:common:forms.html.twig' %}

{% block body %}
    <h1>Login to System</h1>
    {{ form_start(authorizationForm) }}

    {{ form_label(authorizationForm.login) }}
    {{ form_widget(authorizationForm.login) }}
    {{ form_errors(authorizationForm.login) }}

    {{ form_label(authorizationForm.password) }}
    {{ form_widget(authorizationForm.password) }}
    {{ form_errors(authorizationForm.password) }}

    {{ form_end(authorizationForm) }}
{% endblock %}

{% block tabs %}
    {{ include('AppBundle:authorization:tabs.html.twig', {'active': 2}) }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/styles/sign-in-sign-up.css') }}">
{% endblock %}